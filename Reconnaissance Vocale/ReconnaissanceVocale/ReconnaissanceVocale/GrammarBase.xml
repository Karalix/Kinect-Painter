<!-- Grammaire basique de notre application -->
<grammar version="1.0" xml:lang="fr-FR" root="rootRule" tag-format="semantics/1.0-literals" xmlns="http://www.w3.org/2001/06/grammar">
  <rule id="rootRule">
    <one-of>
      <item>
        <!-- Dire "DESSIN" pour lancer le dessin -->
        <tag>DESSIN</tag>
        <one-of>
          <item> Dessin </item>
        </one-of>
        <!-- Dire "OBJET" pour lancer les OBJET -->
        <tag>OBJET</tag>
        <one-of>
          <item> Objet </item>
        </one-of>
      </item>
    </one-of>
  </rule>
</grammar>

